<% if (user) { %>

	<h2>Runner Profile</h2>
	<br>
	<img src="<%= stravaProfile.photos[0].value %>" class="img-thumbnail">
	<br>
	<h2><%= stravaProfile.displayName %></h2>
	<a href="https://www.strava.com/athletes/<%= stravaProfile.id %>" class="btn btn-primary">Strava Profile</a>
	<br>
	<% if (user.foundation) { %>
		<h4>Foundation: <%= user.foundation %></h4>
		<h4>ระยะทางสะสม: <%= user.totalDistance %> KM</h4>
		<br>
	<% } else { %>
		<h4>กรุณากรอกข้อมูลที่ได้จากการสมัคร ICMM 2020</h4>
		<form id="reg-form" role="form" style="display: block;">
			<div class="form-group">
				<label>รหัสลงทะเบียน</label>
				<input type="text" name="regId" id="regId" tabindex="1" class="form-control" required>
			</div>
			<div class="form-group">
				<button type="button" id="submitButton" class="btn btn-primary">
					ส่ง
				</button>
			</div>
		</form>
	<% } %>
<% } else { %>
	<h3 color='red'>ไม่พบข้อมูล กรุณา Login ใหม่</h3>
	<a href="/login" class="btn btn-lg btn-secondary">Login</a>
<% } %>
