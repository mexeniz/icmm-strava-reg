<% if (user) { %>
	<h2>Runner Profile</h2>
	<br>
	<img src="<%= stravaProfile.photos[0].value %>" class="img-thumbnail">
	<br>
	<h2><%= user.firstName user.lasttName %></h2>
	<a href="https://www.strava.com/athletes/<%= stravaProfile.id %>" class="btn btn-primary">Strava Profile</a>
	<br>
	<br>
	<% if (user.foundation) { %>
		<h4>Foundation: <%= user.foundation %></h4>
		<h4>ระยะทางสะสม: <%= user.totalDistance %> KM</h4>
		<br>
	<% } else { %>
		<h4>กรุณากรอกข้อมูลที่ได้จากการสมัคร ICMM 2020</h4>
		<form id="reg-form" role="form" style="display: block;">
			<div class="form-group">
				<label>รหัสลงทะเบียน</label>
				<input type="text" name="regId" id="regId" tabindex="1" class="form-control" required>
			</div>
			<div class="form-group">
				<button type="button" id="submitButton" class="btn btn-primary">
					ส่ง
				</button>
			</div>
		</form>
		<br>
		<form id="reg-form" role="form" style="display: block;">
			<form id="search-form" role="form" style="display: block;">
				<div class="row">
                    <div class="col-md-6 mb-3">
                    <label for="firstName">ชื่อ</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        กรุณากรอกชื่อ
                    </div>
                    </div>
                    <div class="col-md-6 mb-3">
                    <label for="lastName">นามสกุล</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        กรุณากรอกนามสกุลนักวิ่ง
                    </div>
                    </div>
                </div>
				<div class="form-group">
					<label>หมายเลขโทรศัพท์</label>
					<input type="password" name="telNumber" id="telNumber" tabindex="2" class="form-control"
						minlength=4 maxlength=4 placeholder="เบอร์โทร 4 หลักสุดท้าย (หากไม่เคยกรอกไว้ตอนลงทะเบียวิ่งให้เว้นว่างไว้)"
						required>
				</div>
				<div class="form-group">
					<button type="button" id="submitButton" class="btn btn-primary">
						ส่ง
					</button>
				</div>
			</form>
		</form>
	<% } %>
<% } else { %>
	<h3 color='red'>ไม่พบข้อมูล กรุณา Login ใหม่</h3>
	<a href="/login" class="btn btn-lg btn-secondary">Login</a>
<% } %>
